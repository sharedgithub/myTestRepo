package main.designPatterns;

public class S_Decorator {
    //modifyihng behaviour of a class without touching it

    public static void main(String[] args) {
        Animal dog=new Specialdog(new Dog());
        dog.doSomething();
    }
}



interface Animal{
    public void doSomething();
}

class Dog implements Animal{

    public void doSomething(){
        System.out.println("hello dog");
    }
}

class Specialdog implements Animal{
    Dog animal;

    Specialdog(Dog dog){
       this.animal=dog;
    }

    public void doSomething(){
        System.out.println("hello special dog");
        animal.doSomething();
        System.out.println("bye special dog");
    }
}
